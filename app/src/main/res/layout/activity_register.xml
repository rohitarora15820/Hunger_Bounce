<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:fillViewport="true"
    tools:context=".activity.RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/layoutRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <EditText
        android:id="@+id/editText1Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name(Min. 3 characters)"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="3dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/editText2Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:layout_below="@+id/editText1Register"

        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="3dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/editText3Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2Register"
        android:hint="Mobile Number(10 digits)"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_mobile"
        android:drawablePadding="3dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/editText4Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3Register"
        android:hint="Delivery Address"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="3dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/editText5Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText4Register"
        android:hint="Password"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="numberPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="3dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/editText6Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5Register"
        android:hint="Confirm Password"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="numberPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="3dp"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText6Register"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    </RelativeLayout>
</ScrollView>